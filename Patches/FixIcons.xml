<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>GloomyFurniture</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="RGK_DoorOld"]</xpath>
					<value>
						<uiIconScale>0.9</uiIconScale>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="RGK_Street_Lamp"]/uiIconScale</xpath>
					<value>
						<uiIconScale>1.8</uiIconScale>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="RGK_Street_Lamp"]</xpath>
					<value>
						<uiIconOffset>(0, 0.15)</uiIconOffset>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="RGK_Street_Lamp_Seven"]/uiIconScale</xpath>
					<value>
						<uiIconScale>1.8</uiIconScale>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="RGK_Street_Lamp_Seven"]</xpath>
					<value>
						<uiIconOffset>(0, 0.15)</uiIconOffset>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	</Patch>